{
  "name": "zikr-reminder",
  "version": "1.0.0",
  "description": "Modern Islamic Adhkar Reminder for Windows Desktop",
  "type": "module",
  "main": "public/main.js",
  "homepage": "./",
  "author": "3aB0z",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:7361 && cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=--no-deprecation electron .\"",
    "dev": "cross-env NODE_NO_WARNINGS=1 vite",
    "dev-electron": "concurrently \"npm run dev\" \"wait-on http://localhost:7361 && cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=--no-deprecation electron .\"",
    "build": "cross-env NODE_NO_WARNINGS=1 vite build",
    "prebuild-electron": "npm run build",
    "build-electron": "cross-env NODE_OPTIONS=--no-deprecation electron-builder",
    "preview": "vite preview",
    "test": "echo 'Configure a test runner like Vitest'"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.478.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.3",
    "electron-builder": "^26.3.1",
    "prettier": "^3.7.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.zikr-reminder.app",
    "productName": "Zikr Reminder",
    "files": [
      "build/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "public/icons"
    },
    "win": {
      "target": "portable",
      "icon": "public/icons/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
